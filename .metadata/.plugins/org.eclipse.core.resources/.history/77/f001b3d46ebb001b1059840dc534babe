#Question 1
rivers = {
    'Amazon': 'Brazil',
    'Mississippi': 'Gulf of Mexico',
    'Nile': 'Egypt'
}
for i in rivers:
    print("The " + i + " river is located in " + rivers.get(i))
print("")
for i in rivers:
    print(i)
print("")
for i in rivers:
    print(rivers.get(i))
print("")
